<h2><%="You have errors" if !@post.errors.empty? %></h2>
<%= form_for @post do |f|%>
  <%= f.label :title%>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :destination%>
  <%= f.collection_select :destination_id, Destination.all, :id, :name %>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
  <%= f.submit %>
<% end %>
